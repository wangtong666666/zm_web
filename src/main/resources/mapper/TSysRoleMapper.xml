<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper
PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='cn.wt.springbootdemo2.dao.TSysRoleDao'>

	<resultMap type="cn.wt.springbootdemo2.entity.TSysRole" id="resultMap">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="description" property="description" />

	</resultMap>

	<!-- 公用的判断条 -->
	<sql id="configParamSql">
					<if test="name !=null  and  name!=''">
							and obj.name=#{name}
						</if>
					<if test="description !=null  and  description!=''">
							and obj.description=#{description}
						</if>
					<if test="id !=null  and  id!=0">
							and obj.id=#{id}
						</if>
	</sql>

	<select id="selectPage" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysRole">
			SELECT * FROM t_sys_role obj 
				<where>
					<include refid="configParamSql"/>
				</where>
	</select>

	<select id="selectList" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysRole">
		select * from t_sys_role
		<where>
				<if test="name !=null  and  name!=''">
				and name=#{name}
			</if>
				<if test="description !=null  and  description!=''">
				and description=#{description}
			</if>
				<if test="id !=null  and  id!=0">
				and id=#{id}
			</if>
		</where>
	</select>

	<select id="selectOne" resultMap="resultMap" parameterType="java.lang.Integer">
		select * from t_sys_role where id = #{id}
	</select>

	<insert id="save" parameterType="cn.wt.springbootdemo2.entity.TSysRole">
		<![CDATA[insert into t_sys_role(name,description,id)
		values(#{name,jdbcType=VARCHAR},#{description,jdbcType=VARCHAR},#{id,jdbcType=INTEGER})]]>
	</insert>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from t_sys_role
		where id=#{id}
	</delete>

	<update id='update' parameterType='cn.wt.springbootdemo2.entity.TSysRole'>
		update t_sys_role set
		name = #{name,jdbcType=VARCHAR},
		description = #{description,jdbcType=VARCHAR},
		id = #{id,jdbcType=INTEGER}
		where id=#{id}
	</update>

</mapper>

