<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper
PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='cn.wt.springbootdemo2.dao.TSysUserDao'>

	<resultMap type="cn.wt.springbootdemo2.entity.TSysUser" id="resultMap">
		<id column="id" property="id" />
		<result column="password" property="password" />
		<result column="true_name" property="trueName" />
		<result column="user_name" property="userName" />
		<result column="create_date" property="createDate" />
	</resultMap>

	<!-- 公用的判断条 -->
	<sql id="configParamSql">
					<if test="password !=null  and  password!=''">
							and obj.password=#{password}
						</if>
					<if test="trueName !=null  and  trueName!=''">
							and obj.true_name=#{trueName}
						</if>
					<if test="userName !=null  and  userName!=''">
							and obj.user_name=#{userName}
						</if>
					<if test="id !=null  and  id!=0">
							and obj.id=#{id}
						</if>
					<if test="createDate !=null  and  createDate!=''">
							and obj.create_date=#{createDate}
						</if>
	</sql>

	<select id="selectPage" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysUser">
			SELECT * FROM t_sys_user obj 
				<where>
					<include refid="configParamSql"/>
				</where>
	</select>

	<select id="selectList" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysUser">
		select * from t_sys_user
		<where>
				<if test="password !=null  and  password!=''">
				and password=#{password}
			</if>
				<if test="trueName !=null  and  trueName!=''">
				and true_name=#{trueName}
			</if>
				<if test="userName !=null  and  userName!=''">
				and user_name=#{userName}
			</if>
				<if test="id !=null  and  id!=0">
				and id=#{id}
			</if>
				<if test="createDate !=null  and  createDate!=''">
				and create_date=#{createDate}
			</if>
		</where>
	</select>

	<select id="selectOne" resultMap="resultMap" parameterType="java.lang.Integer">
		select * from t_sys_user where id = #{id}
	</select>

	<insert id="save" parameterType="cn.wt.springbootdemo2.entity.TSysUser">
		<![CDATA[insert into t_sys_user(password,true_name,user_name,create_date)
		values(#{password,jdbcType=VARCHAR},#{trueName,jdbcType=VARCHAR},#{userName,jdbcType=VARCHAR},#{createDate,jdbcType=VARCHAR})]]>
	</insert>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from t_sys_user
		where id=#{id}
	</delete>

	<update id='update' parameterType='cn.wt.springbootdemo2.entity.TSysUser'>
		update t_sys_user set
		password = #{password,jdbcType=VARCHAR},
		true_name = #{trueName,jdbcType=VARCHAR},
		user_name = #{userName,jdbcType=VARCHAR},
		id = #{id,jdbcType=INTEGER},
		create_date = #{createDate,jdbcType=VARCHAR}
		where id=#{id}
	</update>

</mapper>

