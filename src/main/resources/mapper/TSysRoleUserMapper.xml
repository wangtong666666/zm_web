<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper
PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='cn.wt.springbootdemo2.dao.TSysRoleUserDao'>

	<resultMap type="cn.wt.springbootdemo2.entity.TSysRoleUser" id="resultMap">
		<id column="id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="user_id" property="userId" />
		<result column="remark" property="remark" />
	</resultMap>

	<!-- 公用的判断条 -->
	<sql id="configParamSql">
					<if test="roleId !=null  and  roleId!=0">
							and obj.role_id=#{roleId}
						</if>
					<if test="userId !=null  and  userId!=0">
							and obj.user_id=#{userId}
						</if>
					<if test="remark !=null  and  remark!=''">
							and obj.remark=#{remark}
						</if>
					<if test="id !=null  and  id!=0">
							and obj.id=#{id}
						</if>
	</sql>

	<select id="selectPage" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysRoleUser">
			SELECT * FROM t_sys_role_user obj 
				<where>
					<include refid="configParamSql"/>
				</where>
	</select>

	<select id="selectList" resultMap="resultMap" parameterType="cn.wt.springbootdemo2.entity.TSysRoleUser">
		select * from t_sys_role_user
		<where>
				<if test="roleId !=null  and  roleId!=0">
				and role_id=#{roleId}
			</if>
				<if test="userId !=null  and  userId!=0">
				and user_id=#{userId}
			</if>
				<if test="remark !=null  and  remark!=''">
				and remark=#{remark}
			</if>
				<if test="id !=null  and  id!=0">
				and id=#{id}
			</if>
		</where>
	</select>

	<select id="selectOne" resultMap="resultMap" parameterType="java.lang.Integer">
		select * from t_sys_role_user where id = #{id}
	</select>

	<insert id="save" parameterType="cn.wt.springbootdemo2.entity.TSysRoleUser">
		<![CDATA[insert into t_sys_role_user(role_id,user_id,remark)
		values(#{roleId,jdbcType=INTEGER},#{userId,jdbcType=INTEGER},#{remark,jdbcType=VARCHAR})]]>
	</insert>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from t_sys_role_user
		where id=#{id}
	</delete>

	<update id='update' parameterType='cn.wt.springbootdemo2.entity.TSysRoleUser'>
		update t_sys_role_user set
		role_id = #{roleId,jdbcType=INTEGER},
		user_id = #{userId,jdbcType=INTEGER},
		remark = #{remark,jdbcType=VARCHAR},
		id = #{id,jdbcType=INTEGER}
		where id=#{id}
	</update>

</mapper>

